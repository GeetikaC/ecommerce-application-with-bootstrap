<h2>Address List</h2>
<% if @addresses.empty? %>
	<p>No address found.</p>
<% else %>
	<ol>
		<% @addresses.each do |address| %>
		<li>
			Name: <%= address.name %><br/>
			Pin: <%= address.pincode %><br/>
			Street: <%= address.street %><br/>
			Landmark: <%= address.landmark %><br/>
			City: <%= address.city %> <br/>
			<%= link_to "Edit", edit_address_path(address.id) %> |
			<%= link_to "Delete", address_path(address.id), method: :delete, data: {confirm: "Are you sure you want to delete this address?"} %> |
			<%= link_to "Select", cart_line_items_path %>
		</li>
		<% end %>
	</ol>
<% end %>

<%= link_to "Add address", new_address_path %>