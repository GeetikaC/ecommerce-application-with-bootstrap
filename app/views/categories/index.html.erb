<h2>Popular Searches:</h2>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= Product.all.sample.feature_image_url %>" alt="First slide" height="280" width="280">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= Product.all.sample.feature_image_url %>" alt="Second slide" height="280" width="280">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= Product.all.sample.feature_image_url %>" alt="Third slide" height="280" width="280">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="row">
	<!-- Blog Entries Column -->
	<div class="col-md-8">
	  <h2 class="my-4">All Categories<br/>
	    <small>Total: <%= @categories.length %></small>
	  </h2>

    <div class="col-md-1">
    <!-- Button trigger modal -->
    <% if (user_signed_in?) && (can? :create, Category.new) %>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newCategory">
        Add Category
      </button>
    <% end %>
    

    <!-- Modal -->
    <div class="modal fade" id="newCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add a new category:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render 'form', category: @category %>
          </div>
        </div>
      </div>
    </div> 
  </div>


	  <!-- Blog Post -->
	  <% @categories.each do |category| %>
	  <div class="card mb-2", id="categoryList">
	    <div class="card-body">
	      <h2 class="card-title"><%= link_to category.name, category_path(category.id) %>(<%= category.products.count %>)</h2>
	    </div>
	  </div>
	  <% end %>
	</div>
</div>
