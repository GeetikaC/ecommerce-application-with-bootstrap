<%= form_for(@product, remote: true) do |f| %>

	<label for="product_category_id" class="form-group">Category: </label><br/>
	<%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select Category"}, {class: "form-control"} %> <br/>

	<label for="product_name" class="form-group">Name: </label><br/>
	<%= f.text_field :name, placeholder: "Enter name", class: "form-control" %> <br/>

	<label for="product_description" class="form-group">Desription: </label><br/>
	<%= f.text_area :description, class: "form-control" %> <br/>

	<label for="product_price" class="form-group">Price: </label><br/>
	<%= f.number_field :price, min: 1, class: "form-control" %> <br/>

	<label for = “product_cod_eligible” class="form-group"> COD Eligible? </label><br/>
	<%= f.check_box :cod_eligible, class: "form-control" %>

	<label for = “product_image_url” class="form-group"> Image URL </label> <br/>
	<%= f.text_field :feature_image_url, class: "form-control" %> <br/>

	<%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>